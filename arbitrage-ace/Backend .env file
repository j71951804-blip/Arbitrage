# Backend .env file
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/arbitrage-ace

# JWT Secret (generate a secure random string)
JWT_SECRET=your_super_secure_jwt_secret_here_make_it_long_and_random

# eBay API (you'll get these from eBay Developer Program)
EBAY_APP_ID=your_ebay_app_id
EBAY_CERT_ID=your_ebay_cert_id
EBAY_DEV_ID=your_ebay_dev_id

# Amazon API (you'll get these from Amazon Associates/Product Advertising API)
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_ASSOCIATE_TAG=your_amazon_associate_tag

# Gemini API
GEMINI_API_KEY=your_gemini_api_key
